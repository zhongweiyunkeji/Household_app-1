<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_bj</item>
        <item name="colorPrimaryDark">@color/title_bj</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/title_bj</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/title_bj</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>

        <item name="windowActionBar">false</item>
    </style>


    <style name="ActivityTheme" parent="AppTheme.Toolbar">
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>

    </style>


    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="FitSystemWindows">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>




    <!--何莉萍定义的样式-->
    <style name="ActionBarBackground" parent="ActionBarBackground">
        <item name="android:background">@color/title_bj</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ActionBarFont">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="bodyBackground" parent="bodyBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bgcolor</item>
    </style>

    <!--List Padding-->
    <style name="ListPadding" parent="ListPadding">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!--List Level 1-->
    <style name="ListPadding.ListLevel1" parent="ListPadding.ListLevel1">
        <item name="android:background">@color/list_title_bgcolor</item>
        <item name="android:textColor">@color/list_title_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--List Level 2-->
    <style name="ListPadding.ListLevel2" parent="ListPadding.ListLevel2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="layout_gravity">center</item>-->
        <item name="android:background">@color/font_color</item>
        <item name="android:textColor">@color/list_title_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--List Level 3-->
    <style name="ListPadding.ListLevel3" parent="ListPadding.ListLevel3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>



    <!--Button Color Is Light Blue-->
    <style name="btnLightBlue" parent="btnLightBlue">
        <item name="android:background">@drawable/btn_lightblue</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">30dp</item>
    </style>



</resources>

