<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色（黑色）  -->
    <item>
        <shape>
            <corners android:radius="5dp" />
            <gradient android:startColor="#446b7079" android:endColor="#446b7079" />
        </shape>
    </item>

    <!--  设置进度条颜色（白色）  -->
    <item >
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient  android:startColor="#00aeef" android:endColor="#00aeef" />
            </shape>
        </clip>
    </item>

</layer-list>