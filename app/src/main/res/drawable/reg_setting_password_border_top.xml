<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <!-- 边框颜色值 -->
            <solid android:color="#D6DBDF" />
        </shape>
    </item>
    <!-- 此处定义只有左、右、上这三边有边框 高度为1dp  -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" >
        <shape android:shape="rectangle">
            <!--边框里面背景颜色 白色-->
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" />
        </shape>
    </item>
</layer-list>

