<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mydevice_content_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/mydevice_ico"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:src="@drawable/device_ico_example"/>
        <TextView
            android:id="@+id/mydevice_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="2"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_weight="10">
        <TextView
            android:id="@+id/mydevice_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="海康DS-2CD2412F"
            android:textSize="18sp"
            android:paddingTop="3dp"
            android:textColor="@color/list_title_color"/>
        <TextView
            android:id="@+id/mydevice_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="家里门口"
            android:textSize="18sp"
            android:textColor="@color/text_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UID:"
                android:textSize="16sp"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/mydevice_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="2317635"
                android:textSize="16sp"
                android:textColor="@color/edit_color"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/mydevice_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启"
        android:textSize="14sp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/green" />
    <!--此处有两种状态，一个是开启，一个是关闭，根据用户是否开启摄像头来显示不同状态-->
