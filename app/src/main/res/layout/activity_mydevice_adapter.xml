        <!--android:id="@+id/mydevice_close"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="关闭"-->
        <!--android:textSize="14sp"-->
        <!--android:paddingTop="3dp"-->
        <!--android:paddingRight="3dp"-->
        <!--android:textColor="@color/text_color" />-->
</LinearLayout>