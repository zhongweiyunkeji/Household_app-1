<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bodyBackground"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/top_image_view_id"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="智慧家居安全云"
        android:textColor="@color/list_title_color"
        android:textSize="24sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearlayout_1"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@drawable/edit_text_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/user_edittext_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:textColorHint="@color/edit_color"
            android:drawableRight="@drawable/ic_from_mobile"
            android:hint="@string/please_user_name_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/list_line_x"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <EditText
            android:id="@+id/passworld_edittext_id"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textColorHint="@color/edit_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="@string/please_pass_word_text" />

        <!--<com.cdhxqh.household_app.ui.widget.SwitchButtonIs-->
            <!--android:id="@+id/wiperSwitch1"-->
            <!--android:layout_gravity="right|center_vertical"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:gravity="center"-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="10dp" />-->
        </FrameLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp">
        <CheckBox
            android:id="@+id/isremenber_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/checkbox"
            android:text="@string/remenber_pass"
            android:textSize="16sp"
            android:textColor="@color/text_color"/>
        <TextView
            android:id="@+id/TextViewPassWord"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/forget_pass_word"
            android:textColor="@color/text_color"
            android:textSize="16sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearlayout_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/registered_btn_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_darkblue"
            android:text="@string/registered_new_user"
            android:textColor="@color/font_color"
            android:textSize="20dp" />

        <Button
            android:id="@+id/login_btn_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/btn_lightblue"
            android:text="@string/login_text"
            android:textColor="@color/font_color"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
</LinearLayout>


