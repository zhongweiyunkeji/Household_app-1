<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1fbf9"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/top_image_view_id"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_a_b" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="智慧家居安全云"
        android:textSize="24sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearlayout_1"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@drawable/login_edit_text"
        android:orientation="vertical">

        <EditText
            android:id="@+id/user_edittext_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:singleLine="true"
            android:background="@color/font_color"
            android:drawableRight="@drawable/registed_a_mobile"
            android:hint="@string/please_user_name_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/mail_line_x"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <EditText
            android:id="@+id/passworld_edittext_id"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/font_color"
            android:layout_marginRight="5dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="@string/please_pass_word_text" />

        <com.example.administrator.homesafety.tool.SwitchButton
            android:id="@+id/wiperSwitch1"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_width="10dp"
            android:layout_height="10dp"
            />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/TextViewPassWord"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/forget_pass_word"
        android:textColor="@color/list_item_read"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linearlayout_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/registered_btn_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_reg_static"
            android:textColor="@color/font_color"
            android:textSize="20dp" />

        <Button
            android:id="@+id/login_btn_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/button_login_static"
            android:textColor="@color/font_color"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
</LinearLayout>


