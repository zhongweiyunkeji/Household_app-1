<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <include layout="@layout/activity_tittle" />

    <VideoView
        android:id="@+id/video_paly"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View android:background="@drawable/list_line_x" android:layout_width="wrap_content" android:layout_height="1dp" />
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备名称"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/equip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海康DSA-2CD2412F"
                android:textSize="17sp"
                android:layout_gravity="left|center"
                android:gravity="left"
                android:textColor="@color/text_color"
                android:layout_margin="10dp"
                />
        </TableRow>

        <View android:background="@drawable/list_line_x" android:layout_width="wrap_content" android:layout_height="1dp" />
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安装地点"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/equip_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家里门口"
                android:textSize="17sp"
                android:textColor="@color/text_color"
                android:layout_gravity="left|center"
                android:gravity="left"
                android:layout_margin="10dp"
                />
        </TableRow>

        <View android:background="@drawable/list_line_x" android:layout_width="wrap_content" android:layout_height="1dp" />
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报警类型"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/alarm_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移动报警"
                android:textSize="17sp"
                android:textColor="@color/text_color"
                android:layout_gravity="left|center"
                android:gravity="left"
                android:layout_margin="10dp"
                />
        </TableRow>

        <View android:background="@drawable/list_line_x" android:layout_width="wrap_content" android:layout_height="1dp" />

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报警说明"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/alarm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有可疑人员移动"
                android:textSize="17sp"
                android:textColor="@color/text_color"
                android:layout_gravity="left|center"
                android:gravity="left"
                android:layout_margin="10dp"
                />
        </TableRow>

        <View android:background="@drawable/list_line_x" android:layout_width="wrap_content" android:layout_height="1dp" />

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报警时间"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/alarm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-10-10 12:58:59"
                android:layout_gravity="left|center"
                android:gravity="left"
                android:textSize="17sp"
                android:textColor="@color/text_color"
                android:layout_margin="10dp"
                />
        </TableRow>
        <View android:background="@drawable/list_line_x" android:layout_width="wrap_content" android:layout_height="1dp" />
    </TableLayout>


</LinearLayout>