<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bj">

    <ImageView
        android:id="@+id/back_imageview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_menu_back"
        android:visibility="visible" />

    <EditText
        android:id="@+id/title_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:focusable="true"
        android:background="@color/search_textview_background"
        android:textCursorDrawable="@drawable/cursor_white"
        android:drawableLeft="@drawable/ic_tab_search"
        android:textColor="@color/font_color"
        android:textSize="@dimen/dimens_22" />

    <ImageView
        android:id="@+id/title_search_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_menu_close" />
</RelativeLayout>
